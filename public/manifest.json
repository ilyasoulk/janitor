{
    "manifest_version": 3,
    "name": "SkyShade - Text Anonymizer",
    "version": "1.0",
    "description": "Anonymizes selected text by replacing named entities with generic labels",
    "permissions": [
      "activeTab",
      "scripting",
      "contextMenus",
      "storage"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "minimum_chrome_version": "92",
    "action": {
      "default_icon": {
        "16": "icons/icon.png",
        "24": "icons/icon.png",
        "32": "icons/icon.png"
      },
      "default_title": "Transformers.js",
      "default_popup": "../popup/popup.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
